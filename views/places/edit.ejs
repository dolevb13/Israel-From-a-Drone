<%- include("../partials/header") %>

  <div class="row">
    <h1 style="text-align: center;">Edit Place</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/places/<%= place._id %>?_method=PUT" method="POST" id="check">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="place[name]"
            value="<%= place.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="place[image]"
            value="<%= place.image %>"
          />
        </div>
        
        <div class="form-group">
          <textarea class="form-control" name="place[description]" placeholder="description" cols="40" rows="5"
            form="check"><%= place.description %></textarea>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= place.location %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/places"> Back</a>
    </div>
  </div>

<%- include("../partials/footer") %>
